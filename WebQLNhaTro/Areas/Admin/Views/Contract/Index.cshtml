@model IEnumerable<WebQLNhaTro.Models.Contract>

@{
    ViewBag.Title = "Các hợp đồng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    div {
        margin-bottom: 20px;
    }

    label, select, input {
        margin-right: 10px;
    }

        input[type="submit"] {
            background-color: #4caf50;
            color: white;
            padding: 8px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #45a049;
            }

    tr:hover {
        background-color: #f5f5f5;
    }
</style>

@using (Html.BeginForm("Index", "Contract", FormMethod.Get))
{
    <div>
        <label for="statusFilter">Chọn trạng thái:</label>
        <select name="statusFilter" id="statusFilter">
            <option value="">Tất cả</option>
            <option value="Chờ duyệt">Chờ duyệt</option>
            <option value="Khóa">Khóa</option>
        </select>
        <input type="submit" value="Lọc">
    </div>
}

<table>
    @if (Model != null)
    {
        <tr>
            <th>Người Thuê Nhà</th>
            <th>Ngày Hết Hạn</th>
            <th>Trạng Thái</th>
            <th>Thông Tin Nhà Trọ</th>
            <th>Thao Tác</th>
        </tr>
        foreach (var contract in Model)
        {
            if (!contract.IsLocked && contract.custom != null && contract.motel != null) // Kiểm tra nếu chưa bị khóa và có thông tin custom và motel mới hiển thị
            {
<tr>
    <td>@contract.custom.fullName</td>
    <td>@contract.Expirationdate</td>
    <td>@contract.Status</td>
    <td>
        <strong>Giá:</strong> @contract.motel.Price<br />
        <strong>Diện tích:</strong> @contract.motel.Acreage<br />
        <strong>Địa chỉ:</strong> @contract.motel.Address<br />
        <strong>Trạng thái nhà trọ:</strong> @contract.motel.Status<br />
        <strong>Tiêu đề:</strong> @contract.motel.Title<br />
        <img src="@contract.motel.Image" alt="Ảnh nhà trọ" style="max-width: 100px; max-height: 100px;" />
    </td>
    <td>
        <button onclick="approveContract('@Url.Action("ApproveContract", "Contract")', @contract.ContractID)"
                @if (contract.Status != "Chờ Duyệt") { <text> disabled</text> }>
            Duyệt
        </button>


        @if (contract.Status == "Chờ Duyệt" || contract.Status == "Đã Duyệt")
        {
            <button onclick="lockContract('@Url.Action("LockContract", "Contract")', @contract.ContractID)">Khóa</button>
        }

        <a href="@Url.Action("Details", "Contract", new { id = contract.ContractID })">Chi Tiết</a>
    </td>
    <td>
        @Html.ActionLink("Chi Tiết Custom", "CustomDetails", "Contract", new { customId = contract.CustomID }, null)
    </td>

    <!-- Thêm nút Mở Khóa cho nhà trọ -->
    <td>
        @if (contract.Status == "Khóa")
        {
            <button onclick="unlockContract('@Url.Action("UnlockContract", "Contract")', @contract.ContractID)">Mở Khóa</button>
        }
    </td>


</tr>
            }
        }

    }
    }
</table>


<script>
    function approveContract(actionUrl, contractId) {
        if (confirm("Bạn có chắc chắn muốn duyệt hợp đồng này?")) {
            $.ajax({
                url: actionUrl,
                type: 'POST',
                data: { contractId: contractId },
                success: function () {
                    // Thực hiện các hành động cần thiết sau khi duyệt thành công
                    alert("Hợp đồng đã được duyệt!");
                    location.reload(); // Tải lại trang để cập nhật dữ liệu
                },
                error: function () {
                    alert("Đã xảy ra lỗi khi duyệt hợp đồng.");
                }
            });
        }
    }
    function unlockContract(actionUrl, contractId) {
        if (confirm("Bạn có chắc chắn muốn mở khóa hợp đồng này?")) {
            $.ajax({
                url: actionUrl,
                type: 'POST',
                data: { contractId: contractId },
                success: function () {
                    alert("Hợp đồng đã được mở khóa!");
                    location.reload();
                },
                error: function () {
                    alert("Đã xảy ra lỗi khi mở khóa hợp đồng.");
                }
            });
        }
    }

    function lockContract(actionUrl, contractId) {
        if (confirm("Bạn có chắc chắn muốn khóa hợp đồng này?")) {
            $.ajax({
                url: actionUrl,
                type: 'POST',
                data: { contractId: contractId },
                success: function () {
                    // Thực hiện các hành động cần thiết sau khi khóa thành công
                    alert("Hợp đồng đã được khóa!");
                    location.reload(); // Tải lại trang để cập nhật dữ liệu
                },
                error: function () {
                    alert("Đã xảy ra lỗi khi khóa hợp đồng.");
                }
            });
        }
    }
</script>

