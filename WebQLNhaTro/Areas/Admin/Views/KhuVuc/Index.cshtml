@model IEnumerable<WebQLNhaTro.Models.KhuVuc>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/khuvuc" class="nav-link">Khu vực</a>
        </li>
    </ul>
}


<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách danh mục</h3>

            <div class="card-tools">
                <a href="/admin/khuvuc/add" class="btn btn-primary">Thêm mới</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Mã khu vực</th>
                        <th>Tên khu vực</th>
                        <th>Ngày tạo</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var kv in Model)
                    {
                        <tr>
                            <td>@kv.MaKhuVuc</td>
                            <td>@kv.TenKhuVuc</td>
                            <td>@kv.NgayDang</td>
                            <td>
                                <a href="/admin/khuvuc/edit" class="btn btn-sm btn-primary">Sửa</a>
                                <a href="/admin/khuvuc/delete" class="btn btn-sm btn-danger">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>

