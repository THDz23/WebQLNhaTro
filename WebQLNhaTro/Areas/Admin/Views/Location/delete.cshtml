@model WebQLNhaTro.Models.area

@{
    ViewBag.Title = "delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    
</style>
<h2 style="text-align:center">XÁC THỰC THÔNG TIN</h2>

<h3 style="text-align:center;color:red">BẠN THỰC SỰ MUỐN XÓA ??</h3>
<h4 style="text-align:center;color:red">@Html.Raw(ViewBag.ThongBao)</h4>
<div >
    <hr />
    <dl class="dl-horizontal" style="text-align:center">
        <dt>
            Mã khu vực:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AreaID)
        </dd>


        <dt>
            Tên khu vực:
