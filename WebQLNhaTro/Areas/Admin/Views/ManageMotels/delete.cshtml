@model IEnumerable<WebQLNhaTro.Models.Contract>

@{
    ViewBag.Title = "delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3 style="text-align:center;color:red">BẠN THỰC SỰ MUỐN XÓA ??</h3>
<h4 style="text-align:center;color:red">@Html.Raw(ViewBag.ThongBao)</h4>
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin xóa</h3>
        </div>

        <div class="card-body">

            <div class="bs-stepper-content">


                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                @foreach (var rs in Model)
                {
                    <div id="logins-part" class="content active dstepper-block" role="tabpanel" CategoryMotel-labelledby="logins-part-trigger">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tên chủ trọ </label>
                            <input type="text" name="CategoryID" value="@rs.Host.OwnerName" readonly class="form-control" />
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Khách thuê </label>
                            <input type="text" name="CategoryID" value="@rs.custom.fullName" readonly class="form-control" />

                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Ngày lập: </label>
                            <input type="datetime" name="dateF" value="@Convert.ToDateTime(rs.Datefounded)" readonly class="form-control" />
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Ngày hết hạn: </label>
                            <input type="datetime" name="DateE" value="@Convert.ToDateTime(rs.Expirationdate)" readonly class="form-control" />
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Điện </label>
                            <input type="text" name="elec" value="@rs.Electric" readonly class="form-control" />
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Nước</label>
                            <input type="text" name="water" value="@rs.Water" readonly class="form-control" />
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Mạng</label>
                            <input type="text" name="wifi" value="@rs.Wifi" readonly class="form-control" />
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Tổng tiền</label>
                            <input type="text" name="sumVal" value="@rs.Priece" class="form-control" readonly />
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Trang thái</label>
                            <input type="text" name="status" value="@rs.Status" class="form-control" readonly />
                        </div>


                    </div>



                }
            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>

@using (Html.BeginForm("delete", "ManageMotels", FormMethod.Post, new { }))
{
            @Html.AntiForgeryToken()

            <div class="form-actions no-color" style="text-align:center">
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        @Html.ActionLink("QUAY LẠI TRANG CHỦ", "Index")
    </div>
}

