@model IEnumerable<WebQLNhaTro.Models.motel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Location" class="nav-link">Sản phẩm</a>
        </li>
    </ul>
}
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách sản phẩm</h3>

            <div class="card-tools">
                <a href="/admin/product/add" class="btn btn-primary">Thêm mới</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Ảnh </th>
                        <th>Chủ </th>
                        <th>Danh mục</th>
                        <th>Tiêu đề</th>
                        <th>Diện tích</th>
                        <th>Giá</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var sp in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td><img src="~/Image/@sp.Image" width="50" /></td>
                                <td>@sp.Host.OwnerName</td>
                                <td>@sp.CategoryMotel.Type</td>
                                <td>@sp.Title</td>
                                <td>@sp.Acreage</td>
                                <td>@sp.Price</td>
                                <td>@sp.Status</td>
                                <td>
                                    <a href="/admin/product/edit/" class="btn btn-sm btn-primary">Sửa</a>
                                    <a href="/admin/product/delete/" class="btn btn-sm btn-danger">Xóa</a>
                                </td>
                            </tr>
                            i++;
                        }

                    }

                </tbody>
            </table>

        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>

