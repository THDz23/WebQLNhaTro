@model IEnumerable<WebQLNhaTro.Models.motel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <!-- Left navbar links -->


    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Location" class="nav-link">bài đăng</a>
        </li>
    </ul>
}
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách bài đăng</h3>


        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Ảnh </th>
                        <th>Chủ </th>
                        <th>Danh mục</th>
                        <th>Tiêu đề</th>
                        <th>Diện tích</th>
                        <th>Giá</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <!-- ... Mã nguồn hiện tại của bạn ... -->

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var sp in Model)
                        {
                    <tr>
                        <td>@i</td>
                        <td><img src="~/Image/@sp.Image" width="50" /></td>
                        <td>@sp.Host.OwnerName</td>
                        <td>@sp.CategoryMotel.Type</td>
                        <td>@sp.Title</td>
                        <td>@sp.Acreage</td>
                        <td>@sp.Price</td>
                        <td>@sp.Status</td>
                        <td>
                            <a href="/admin/browseposts/show/@sp.MotelID" class="btn btn-sm btn-primary">Xem</a>
                            <a href="/admin/browseposts/approve/@sp.MotelID" class="btn btn-sm btn-success">Duyệt</a>
                        <td>
                            @if (sp.Status == "Chưa duyệt")
                            {
                                <span class="badge badge-warning">@sp.Status</span>
                            }
                            else
                            {
                                <span class="badge badge-success">@sp.Status</span>
                            }
                        </td>
                        
                    </tr>
                            i++;
                        }
                    }

                </tbody>

                <!-- ... Mã nguồn hiện tại của bạn ... -->

            </table>

        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>


